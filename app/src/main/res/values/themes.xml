<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TOKIMoodTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TOKIMoodTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">#2E2E2E</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_secondary</item>
        <!-- Text colors -->
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="dialogBackgroundColor">@color/white</item>
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">#666666</item>
        <item name="buttonBackgroundColor">@color/black</item>
    </style>

    <!-- Auth pages theme that always stays in light mode -->
    <style name="Theme.TOKIMoodTracker.Auth" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@color/auth_background</item>
        <item name="colorPrimary">@color/auth_button_background</item>
        <item name="colorPrimaryVariant">@color/auth_button_background</item>
        <item name="colorOnPrimary">@color/auth_button_text</item>
        <item name="android:statusBarColor">@color/auth_background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/auth_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="buttonStyle">@style/AuthButtonStyle</item>
        <item name="materialButtonStyle">@style/AuthButtonStyle</item>
        <item name="android:textColor">@color/auth_text_primary</item>
        <item name="android:textColorPrimary">@color/auth_text_primary</item>
        <item name="android:textColorSecondary">@color/auth_text_secondary</item>
        <item name="colorControlNormal">@color/auth_text_primary</item>
        <item name="android:editTextColor">@color/auth_text_primary</item>
        <item name="android:textColorHint">@color/auth_hint_text</item>
        <item name="colorControlActivated">@color/auth_text_primary</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
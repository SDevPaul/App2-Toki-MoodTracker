<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">
<!--    Testing comment -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hey, User"
        android:textColor="?attr/colorOnBackground"
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/howFeelingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="how are you\nfeeling today?"
        android:textColor="?attr/colorOnBackground"
        android:textSize="28sp"
        android:textStyle="italic"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greetingText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logMoodButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="log today's mood"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnBackground"
        android:backgroundTint="?attr/colorSurface"
        android:layout_marginTop="32dp"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_heart"
        app:iconTint="?attr/colorOnBackground"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/howFeelingText" />

    <View
        android:id="@+id/quoteBar"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="?attr/colorOnBackground"
        android:alpha="0.5"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logMoodButton"
        app:layout_constraintBottom_toBottomOf="@id/quoteText" />

    <TextView
        android:id="@+id/quoteText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="not every day has to be productive. some days are for feeling."
        android:textColor="?attr/colorOnBackground"
        android:alpha="0.5"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/quoteBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/quoteBar" />

    <TextView
        android:id="@+id/lastMoodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your last mood:    none"
        android:textColor="?attr/colorOnBackground"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quoteText" />

    <TextView
        android:id="@+id/noteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="note:    none"
        android:textColor="?attr/colorOnBackground"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lastMoodText" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date:    none"
        android:textColor="?attr/colorOnBackground"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noteText" />

</androidx.constraintlayout.widget.ConstraintLayout> 